<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_getting_started"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="初体验data binding"/>


    <Button
        android:id="@+id/btn_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="自定义Binding类名称"/>

    <Button
        android:id="@+id/btn_include"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="include中传递变量到被包含layout"/>
    <Button
        android:id="@+id/btn_app_expression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="表达式的使用"/>
    <Button
        android:id="@+id/btn_app_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="集合"/>
    <Button
        android:id="@+id/btn_app_observable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data对象"/>
</LinearLayout>
